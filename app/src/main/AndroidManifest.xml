<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.basiclogins">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Login"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateAccountActivity" />
        <activity
            android:name=".RestaurantsActivity"
            android:label="@string/title_activity_restaurants"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddRestaurantActivity" />
        <activity
            android:name=".RestaurantInfoActivity"
            android:label="@string/title_activity_restaurant_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RestaurantEditActivity"
            android:label="@string/title_activity_restaurant_edit"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>